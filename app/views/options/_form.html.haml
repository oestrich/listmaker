= form_for [troop, option] do |f|
  -if option.errors.any?
    #error_explanation
      %h2= "#{pluralize(option.errors.count, "error")} prohibited this option from being saved:"
      %ul
        - option.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :troop_id, :value => troop.id

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :points
    = f.text_field :points
  .field
    = f.label :type_id
    = f.select(:type_id, Option.types.inject([]) { |select, type| select << [type, select.length] }, :prompt => true)

  = f.submit submit_text
