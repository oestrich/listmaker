- content_for :javascripts do
  = javascript_include_tag 'home'

%p#notice= notice

.header 
  Welcome

  = link_to 'Add Troop Type', new_troop_type_path
  = link_to 'Add Troop', new_troop_path

  .total_points
    Total Points: 
    = Troop.total_points

= form_tag update_positions_troop_type_path, :method => :post, :id => "update-positions-troop-types" do
  .positions
    - troop_types.each do |troop_type|
      = hidden_field_tag "position[#{troop_type.id}]", troop_type.position

%ul.troop-types#troop-type-sort
  - troop_types.each do |troop_type|
    = render troop_type
